---
import Layout from '../layouts/Layout.astro';
import Clock from '../components/Clock';
import TvDashboard from '../components/TvDashboard';
---

<Layout title="Celifrut TV">
  <div class="televisor-container">

    <!-- ── Cabecera: logo | reloj | fruta ── -->
    <div class="televisor-head">
      <div class="televisor-head-icon">
        <img src="/img/logo.png" alt="Celifrut" />
      </div>

      <!-- Isla Preact: reloj en tiempo real (centro) -->
      <Clock client:only="preact" />

      <div class="televisor-head-icon">
        <img src="/img/limon.webp" alt="Producto" />
      </div>
    </div>

    <!-- Isla Preact: panel de datos (métricas + meta) -->
    <TvDashboard client:only="preact" />

  </div>
</Layout>
